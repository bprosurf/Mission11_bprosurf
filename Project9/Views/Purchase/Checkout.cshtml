@{
}


@model Buy

<h2>Checkout Now</h2>

<form method="post" asp-controller="Purchase" asp-action="Checkout">

    <div asp-validation-summary="All" class="text-danger"></div>

    <h4>Ship To</h4>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>


    <h4>Address</h4>

    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3:</label>
        <input asp-for="AddressLine3" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" />
    </div>


    <div class="form-control">
        <label asp-for="State">State</label>
        <input asp-for="State" />
    </div>


    <div class="form-control">
        <label asp-for="Zip">Zip Code</label>
        <input asp-for="Zip" />
    </div>

    <div class="form-control">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" />
    </div>

    <div class="checkbox">
        <label asp-for="Anonymous">
            <input asp-for="Anonymous" />Purchase as Guest
        </label>
    </div>


    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Send Purchase" />
    </div>


</form>
